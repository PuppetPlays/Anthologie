      <docTitle>
        <titlePart type="main">Don Juan</titlePart>
        <titlePart type="sub">Eine moralische Scene mit einem unmoralischen Nachspiel von Alexander von Bernus</titlePart>
      </docTitle>
      <docDate>1907</docDate>
      <pb n="2" facs="20_D_VON-BERNUS_DonJuan_ALL_MUN_004.jpg"/>
      <pb n="3" facs="20_D_VON-BERNUS_DonJuan_ALL_MUN_005.jpg"/>
